{
  "attachments": [
    {
      "color": "#160080",
      "blocks": [
        {
          "type": "image",
          "title": {
            "type": "plain_text",
            "text": "{text}",
            "emoji": true
          },
          "image_url": "{img_url}",
          "alt_text": "{text}"
        },
        {
          "type": "actions",
          "elements": [
            {
              "type": "button",
              "text": {
                "type": "plain_text",
                "text": "Send",
                "emoji": true
              },
              "value": "{event}",
              "action_id": "send",
              "style": "primary"
            },
            {
              "type": "button",
              "text": {
                "type": "plain_text",
                "text": "Change style",
                "emoji": true
              },
              "value": "{event}",
              "action_id": "again"
            },
            {
              "type": "button",
              "text": {
                "type": "plain_text",
                "text": "Cancel",
                "emoji": true
              },
              "value": "{event}",
              "action_id": "cancel"
            }
          ]
        }
      ]
    }
  ]
}
